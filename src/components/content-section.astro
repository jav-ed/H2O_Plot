---
export interface Props {
  id: string;
  title: string;
}

const { title, id } = Astro.props;
---

<section
  id={id}
  class="flex scroll-mt-1 flex-col items-center gap-1 space-y-3"
>
  <div class="flex flex-col items-center gap-2">
    <!-- <slot name="eyebrow" /> -->
    <h2
      class="text-center 
      font-extrabold
      tracking-tight
      text-3xl
      text_Color_Green"
    >
      {title}
    </h2>
  </div>
  <p class="max-w-3xl text-center font-extrabold 
            text-1xl
            text-white
            ">
    <slot name="lead" />
  </p>
  <slot />
</section>

